<body>

<h1>Mix n Match Pickleball</h1>

<div class="card">
  <h3>Add Players</h3>
  <div class="row">
    <input id="pname" placeholder="Player name">
    <select id="pgender">
      <option value="W">Woman</option>
      <option value="M">Man</option>
    </select>
    <button onclick="addPlayer()">Add</button>
  </div>
  <div id="playerList"></div>
</div>

<div class="card">
  <h3>Generate Rounds</h3>
  <button onclick="generateRounds()">Generate Mix n Match Fixtures</button>
  <div id="fixtures"></div>
</div>

<div class="card">
  <h3>Rankings</h3>
  <table id="rankTable">
    <thead>
      <tr>
        <th>Player</th>
        <th>Points</th>
        <th>Wins</th>
        <th>PF</th>
        <th>PA</th>
        <th>Diff</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>

<script>
let players=[];
let rounds=[];
let stats={};

function addPlayer(){
  const name=pname.value.trim();
  if(!name) return;
  players.push({name, gender:pgender.value});
  pname.value="";
  renderPlayers();
}

function renderPlayers(){
  playerList.innerHTML=players.map(p=>`${p.name} (${p.gender})`).join("<br>");
}

function generateRounds(){
  if(players.length<4){alert("Minimum 4 players");return;}
  rounds=[];
  stats={};
  players.forEach(p=>{
    stats[p.name]={pts:0,w:0,pf:0,pa:0};
  });

  let men=players.filter(p=>p.gender==="M");
  let women=players.filter(p=>p.gender==="W");

  let usedPairs=new Set();
  let available=[...players];

  while(available.length>=4){
    let pair1=null, pair2=null;

    // MW-first
    for(let m of men){
      for(let w of women){
        let key=[m.name,w.name].sort().join("-");
        if(!usedPairs.has(key)){
          pair1=[m,w];
          break;
        }
      }
      if(pair1) break;
    }

    if(!pair1){
      pair1=[available[0],available[1]];
    }

    usedPairs.add(pair1.map(p=>p.name).sort().join("-"));
    available=available.filter(p=>!pair1.includes(p));

    pair2=[available[0],available[1]];
    usedPairs.add(pair2.map(p=>p.name).sort().join("-"));
    available=available.filter(p=>!pair2.includes(p));

    rounds.push({pair1,pair2});
  }

  renderFixtures();
}

function renderFixtures(){
  fixtures.innerHTML="";
  rounds.forEach((r,i)=>{
    const div=document.createElement("div");
    div.innerHTML=`
      <strong>Match ${i+1}</strong><br>
      ${r.pair1[0].name} & ${r.pair1[1].name}
      vs
      ${r.pair2[0].name} & ${r.pair2[1].name}<br>
      <input type="number" placeholder="Score A" id="a${i}">
      <input type="number" placeholder="Score B" id="b${i}">
      <button onclick="saveResult(${i})">Save</button>
      <hr>
    `;
    fixtures.appendChild(div);
  });
}

function saveResult(i){
  const a=+document.getElementById("a"+i).value;
  const b=+document.getElementById("b"+i).value;
  if(isNaN(a)||isNaN(b)) return;

  const r=rounds[i];
  r.pair1.forEach(p=>{
    stats[p.name].pf+=a;
    stats[p.name].pa+=b;
  });
  r.pair2.forEach(p=>{
    stats[p.name].pf+=b;
    stats[p.name].pa+=a;
  });

  if(a>b){
    r.pair1.forEach(p=>{stats[p.name].pts++;stats[p.name].w++;});
  }else{
    r.pair2.forEach(p=>{stats[p.name].pts++;stats[p.name].w++;});
  }

  renderRankings();
}

function renderRankings(){
  const rows=Object.entries(stats)
    .map(([name,s])=>({...s,name,diff:s.pf-s.pa}))
    .sort((a,b)=>
      b.pts-a.pts ||
      b.w-a.w ||
      b.diff-a.diff
    );

  rankTable.querySelector("tbody").innerHTML=
    rows.map(r=>`
      <tr>
        <td>${r.name}</td>
        <td>${r.pts}</td>
        <td>${r.w}</td>
        <td>${r.pf}</td>
        <td>${r.pa}</td>
        <td>${r.diff}</td>
      </tr>`).join("");
}
</script>

</body>
</html>
