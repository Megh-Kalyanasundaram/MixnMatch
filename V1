  .card{
    background:#0f2435;
    color:#e7f3ff;
    border-radius:10px;
    padding:16px;
    margin-bottom:16px;
    box-shadow:0 6px 18px rgba(0,0,0,.15);
  }
  input, select, button{
    height:36px;
    border-radius:6px;
    border:1px solid #ccc;
    padding:0 10px;
    font-size:14px;
  }
  button{
    background:#d4af37;
    border:none;
    cursor:pointer;
  }
  button:hover{background:#e5c157}
